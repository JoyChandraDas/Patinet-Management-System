@using PatinetManagement.Utility.ViewModels
@model IEnumerable<PatientViewModel>
@{
    ViewData["Title"] = "Patinet Inforamtion";
}
<div class="container shadow-lg rounded-3 mt-4 p-4">
    <div class="row">
        <div class="col-sm-8">
            <h3 class="text-info">Patinet Inforamtion</h3>
        </div>
        <div class="col-sm-4 text-end">
            <a class="btn btn-outline-info" asp-action="Create" asp-controller="Patient">
                Add Patient &nbsp;<i class="fa-solid fa-circle-plus"></i>
            </a>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-responsive table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="text-center" style="width:15%;">Patient Name</th>
                        <th class="text-center" style="width:15%;">Diseases Name</th>
                        <th class="text-center" style="width:10%;">Epilepsy</th>
                        <th class="text-center" style="width:25%;">NCD Details</th>
                        <th class="text-center" style="width:25%;">Allergies Details</th>
                        <th class="text-center" style="width:10%;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@item.PatientName</td>
                            <td class="text-center">@item.DiseaseName</td>
                            <td class="text-center">@item.EpilepsyName</td>
                            <td class="text-center">@item.NCDDetails</td>
                            <td class="text-center">@item.AllergiesDetailses</td>
                            <td class="text-center">
                                <a class="btn btn-outline-success" asp-route-id="@item.Id" asp-action="Create" asp-controller="Patient"><i class="fa-solid fa-pen-to-square"></i></a>
                                <a class="btn btn-outline-danger" asp-route-id="@item.Id" asp-action="Delete" asp-controller="Patient"><i class="fa-solid fa-trash-can"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>